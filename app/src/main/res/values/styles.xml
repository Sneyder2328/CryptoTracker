<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.Main" parent="AppTheme">
    <item name="android:editTextColor">@android:color/white</item>
  </style>

  <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="titleTextColor">#fff</item>
    <item name="android:color">#fff</item>
    <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    <item name="colorControlNormal">#fff</item>
  </style>

  <style name="ToolbarTheme">
    <item name="android:tint">#fff</item>
    <item name="android:color">#fff</item>
    <item name="titleTextColor">#fff</item>
    <item name="android:textColorSecondary">#fff</item>
    <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    <item name="colorControlNormal">#fff</item>
  </style>

  <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">#fff</item>
  </style>

  <style name="menuTextAppearance">
    <item name="android:textColor">#000</item>
    <item name="android:background">#9f7474</item>
  </style>

  <style name="AppTheme.Button">
    <item name="android:textSize">17sp</item>
    <item name="colorButtonNormal">@color/colorAccent</item>
    <item name="android:textColor">#fff</item>
  </style>

  <style name="AppTheme.Button.Header">
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppTheme.Button.LogIn">
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppTheme.Button.SignUp">
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppTheme.Button.Facebook">
    <item name="colorButtonNormal">#4267B2</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppTheme.Button.Google">
    <item name="colorButtonNormal">#dd4b39</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Main.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="TextAppearanceGlobalData">
    <item name="android:textColor">#545454</item>
    <item name="android:textSize">17sp</item>
    <item name="android:padding">16dp</item>
  </style>

  <style name="TextAppearanceCurrencyDetails">
    <item name="android:textColor">#545454</item>
    <item name="android:textSize">17sp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>

  <style name="TopTextAppearanceCurrencyDetails">
    <item name="android:textColor">#545454</item>
    <item name="android:textSize">17sp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>>
  </style>

  <style name="TextAppearanceAddTransaction">
    <item name="android:textColor">#545454</item>
    <item name="android:textSize">17sp</item>
    <item name="android:layout_margin">16dp</item>
  </style>

  <style name="TextAppearanceTransactionsByPair">
    <item name="android:textColor">#fff</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
  </style>

  <style name="TextAppearanceTransactionsByPairItem">
    <item name="android:textColor">#545454</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_marginTop">8dp</item>
  </style>



  <style name="DividerAppearance">
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:background">#a3f4ff</item>
  </style>

</resources>
